@model CartPageVM
@{
    ViewBag.Title = "CartPage";
}

<div class="jumbotron">
    Ödemeniz Gereken Toplam Tutar : @Model.Cart.TotalPrice. Siparişi Onaylamak İçin Lütfen @Html.ActionLink("Tıklayın","SiparisiOnayla") 
</div>
<div class="row product-list">
    @foreach (CartItem item in Model.Cart.Sepetim)
    {
        <div class="col-md-4">
            <section class="panel">
                <div class="pro-img-box">
                    @if (item.ImagePath == null || item.ImagePath == "3")
                    {
                        <img src="http://lorempixel.com/640/480/nightlife/" alt="Resim Yok" width="100" height="300" title="@item.Name" />
                    }
                    else
                    {
                        <img src="@item.ImagePath" alt="Resim Yok" width="100" height="300" title="@item.Name" />
                    }

                    <a href="@Url.Action("DeleteFromCart",new { id =item.ID})" class="adtocart">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>

                </div>
                <div class="panel-body text-center">
                    <h4>
                        <a href="#" class="pro-title" title="@item.Name">
                            @item.Name x @item.Amount
                        </a>
                    </h4>
                    <p class="price">$@item.SubTotal</p>
                </div>
            </section>

        </div>
    }

</div>
